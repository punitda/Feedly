<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--Shape Appearance for small components like buttons, chips, text fields and FABs-->
    <style name="ShapeAppearance.Feedly.SmallComponent" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">0dp</item>
    </style>


    <!--Shape Appearance for medium components like cards and alert dialogs-->
    <style name="ShapeAppearance.Feedly.MediumComponent" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">4dp</item>
    </style>

    <!--Shape Appearance for large components for navigation drawers(side and bottom)-->
    <style name="ShapeAppearance.Feedly.LargeComponent" parent="ShapeAppearance.MaterialComponents.LargeComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">0dp</item>
        <item name="cornerSizeTopLeft">24dp</item>
        <item name="cornerSizeTopRight">24dp</item>
    </style>

    <style name="ShapeAppearance.Feedly.RoundedCornersImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>

</resources>

